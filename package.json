{
  "name": "progress-str",
  "version": "0.0.0-development",
  "description": "Create a progress string",
  "homepage": "https://github.com/unional/progress-str",
  "bugs": {
    "url": "https://github.com/unional/progress-str/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/progress-str.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "clean": "rimraf dist",
    "coverage": "jest --coverage --maxWorkers=60%",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,js,yml,yaml .",
    "nuke": "pnpm clean && rimraf node_modules",
    "prepare": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "release": "semantic-release",
    "size": "size-limit",
    "test": "jest",
    "verify": "npm-run-all -p build depcheck lint coverage -p size",
    "watch": "jest --watch"
  },
  "dependencies": {
    "left-pad": "^1.3.0",
    "make-error": "^1.3.5",
    "right-pad": "^1.0.1",
    "string-length": "^5.0.0",
    "type-plus": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@repobuddy/jest": "^3.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@semantic-release/npm": "^10.0.0",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "assertron": "^11.0.0",
    "chalk": "^5.1.2",
    "depcheck": "^1.4.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-harmony": "^7.1.1",
    "eslint-plugin-yml": "^1.2.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-node": "^29.3.1",
    "jest-esm-transformer-2": "^1.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config-2": "^2.1.0",
    "jest-watch-typeahead": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^21.0.0",
    "size-limit": "^8.1.0",
    "ts-jest": "^29.0.3",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.4.0"
}
